menu "Button_ADC"

	config ADC_CHANNEL
		int "Select ADC1 Channel"
		range 0 9
		default 6
		help
			Select the ADC channel (Only ADC1)
			
		
	config BUTTON_ADC_MAX
		int "Maximum number of BUTTON"
		range 1 10
		default 4
	
	config BUTTON_ADC_POLL_TIMEOUT
		int "Poll timeout, ms"
		range 1 1000
		default 10

	config BUTTON_ADC_POLL_TEST_TIMEOUT
		int "Poll test timeout, ms"
		range 1 1000
		default 300

	config BUTTON_ADC_LONG_PRESS_TIMEOUT
		int "Timeout of long press, ms"
		range 100 10000
		default 1000

	config BUTTON_ADC_AUTOREPEAT_TIMEOUT
		int "Timeout before autorepeat, ms"
		range 100 10000
		default 500

	config BUTTON_ADC_AUTOREPEAT_INTERVAL
		int "Autorepeat interval, ms"
		range 100 10000
		default 250
	
			
		
endmenu
